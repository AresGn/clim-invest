# ClimInvest - Configuration Environment Variables
# Copiez ce fichier vers .env et remplissez avec vos vraies clés API

# OpenEPI Configuration (PRIORITAIRE - REQUIS)
OPENEPI_API_KEY=your_openepi_api_key_here
OPENEPI_CLIENT_ID=your_openepi_client_id_here
OPENEPI_CLIENT_SECRET=your_openepi_client_secret_here
OPENEPI_BASE_URL=https://api.openepi.io/v1

# Fallback Weather APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1
NASA_POWER_BASE_URL=https://power.larc.nasa.gov/api

# Mobile Money APIs (Simulation pour développement)
MTN_MOMO_API_KEY=simulation_key_replace_in_production
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
ORANGE_MONEY_API_KEY=simulation_key_replace_in_production
ORANGE_MONEY_BASE_URL=https://api.orange.com/orange-money-webpay
FLOOZ_API_KEY=simulation_key_replace_in_production
FLOOZ_BASE_URL=https://api.flooz.app

# Communication Services
SMS_PROVIDER_API_KEY=your_sms_provider_key_here
SMS_PROVIDER_URL=https://api.africas-talking.com/version1
VOICE_PROVIDER_API_KEY=your_voice_provider_key_here
VOICE_PROVIDER_URL=https://api.twilio.com/2010-04-01
CALL_CENTER_NUMBER=980

# Application Configuration
APP_ENV=development
DEBUG_MODE=true
CACHE_DURATION=3600
API_TIMEOUT=30000

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Database (si nécessaire)
DATABASE_URL=your_database_url_here

# Analytics (optionnel)
ANALYTICS_API_KEY=your_analytics_key_here

# Monitoring (optionnel)
SENTRY_DSN=your_sentry_dsn_here
